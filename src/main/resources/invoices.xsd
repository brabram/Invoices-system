<!--<?xml version="1.0" encoding="UTF-8"?>-->

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:tns="http://spring.io/guides/gs-producing-web-service"
  targetNamespace="http://spring.io/guides/gs-producing-web-service" elementFormDefault="qualified">

  <xs:element name="getAllInvoicesRequest"/>

  <xs:element name="getAllInvoicesResponse">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="invoicesList" type="tns:invoiceXml" maxOccurs="unbounded"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="getInvoiceByIdRequest">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="id" type="xs:long"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="getInvoiceByIdResponse">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="invoice" type="tns:invoiceXml"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="getInvoiceByNumberRequest">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="number" type="xs:string"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="getInvoiceByNumberResponse">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="invoice" type="tns:invoiceXml"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="addInvoiceRequest">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="invoice" type="tns:invoiceXml"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="addInvoiceResponse">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="invoice" type="tns:invoiceXml"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="updateInvoiceRequest">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="id" type="xs:long"/>
        <xs:element name="invoice" type="tns:invoiceXml"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="updateInvoiceResponse"/>

  <xs:element name="deleteInvoiceRequest">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="id" type="xs:long"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="deleteInvoiceResponse"/>

  <xs:complexType name="invoiceXml">
    <xs:sequence>
      <xs:element name="id" type="xs:long"/>
      <xs:element name="number" type="xs:string"/>
      <xs:element name="issueDate" type="xs:date"/>
      <xs:element name="dueDate" type="xs:date"/>
      <xs:element name="totalNetValue" type="xs:decimal"/>
      <xs:element name="totalGrossValue" type="xs:decimal"/>
      <xs:element name="seller" type="tns:companyXml"/>
      <xs:element name="buyer" type="tns:companyXml"/>
      <xs:element name="entries" type="tns:invoiceEntryXml" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="invoiceEntryXml">
    <xs:sequence>
      <xs:element name="id" type="xs:long"/>
      <xs:element name="item" type="xs:string"/>
      <xs:element name="quantity" type="xs:long"/>
      <xs:element name="price" type="xs:decimal"/>
      <xs:element name="vatValue" type="xs:decimal"/>
      <xs:element name="grossValue" type="xs:decimal"/>
      <xs:element name="vatRate" type="tns:vatXml"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="companyXml">
    <xs:sequence>
      <xs:element name="id" type="xs:long"/>
      <xs:element name="name" type="xs:string"/>
      <xs:element name="taxIdentificationNumber" type="xs:string"/>
      <xs:element name="accountNumber" type="tns:accountNumberXml"/>
      <xs:element name="contactDetails" type="tns:contactDetailsXml"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="contactDetailsXml">
    <xs:sequence>
      <xs:element name="id" type="xs:long"/>
      <xs:element name="email" type="xs:string"/>
      <xs:element name="phoneNumber" type="xs:string"/>
      <xs:element name="website" type="xs:string"/>
      <xs:element name="address" type="tns:addressXml"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="addressXml">
    <xs:sequence>
      <xs:element name="id" type="xs:long"/>
      <xs:element name="street" type="xs:string"/>
      <xs:element name="number" type="xs:string"/>
      <xs:element name="postalCode" type="xs:string"/>
      <xs:element name="city" type="xs:string"/>
      <xs:element name="country" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="accountNumberXml">
    <xs:sequence>
      <xs:element name="id" type="xs:long"/>
      <xs:element name="ibanNumber" type="xs:string"/>
      <xs:element name="localNumber" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>

  <!--<xs:simpleType name="vatXml">-->
    <!--<xs:restriction base="xs:float">-->
      <!--<xs:enumeration value="0.00f" id="VAT_0"/>-->
      <!--<xs:enumeration value="0.05f" id="VAT_5"/>-->
      <!--<xs:enumeration value="0.08f" id="VAT_8"/>-->
      <!--<xs:enumeration value="0.23f" id="VAT_23"/>-->
    <!--</xs:restriction>-->
  <!--</xs:simpleType>-->

  <xs:simpleType name="vatXml">
    <xs:restriction base="xs:string">
      <xs:enumeration value="VAT_0"/>
      <xs:enumeration value="VAT_5"/>
      <xs:enumeration value="VAT_8"/>
      <xs:enumeration value="VAT_23"/>
    </xs:restriction>
  </xs:simpleType>
</xs:schema>

